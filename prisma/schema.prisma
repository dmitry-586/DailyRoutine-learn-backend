generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "esm"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  name          String?
  passwordHash  String
  accessTokens  AccessToken[]
  refreshTokens RefreshToken[]

  @@map("users")
}

model AccessToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("access_tokens")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  revoked   Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("refresh_tokens")
}

model Part {
  id       String    @id @default(uuid())
  title    String
  order    Int
  chapters Chapter[]

  @@map("parts")
}

model Chapter {
  id          String       @id @default(uuid())
  partId      String
  title       String
  order       Int
  part        Part         @relation(fields: [partId], references: [id], onDelete: Cascade)
  subchapters Subchapter[]

  @@index([partId])
  @@map("chapters")
}

model Subchapter {
  id          String  @id @default(uuid())
  chapterId   String
  title       String
  description String
  order       Int
  chapter     Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  @@index([chapterId])
  @@map("subchapters")
}

enum CardDifficulty {
  EASY
  MEDIUM
  HARD
}

model CardCategory {
  id    String @id @default(uuid())
  title String
  order Int    @default(0)
  cards Card[]

  @@map("card_categories")
}

model Card {
  id         String         @id @default(uuid())
  categoryId String
  question   String
  answer     String
  difficulty CardDifficulty @default(MEDIUM)
  category   CardCategory   @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([categoryId])
  @@map("cards")
}
